# .env.paddle
# Paddle configuration for Construction Expenses SAAS
# Copy to .env and fill in your actual Paddle credentials

# Paddle Environment
PADDLE_ENVIRONMENT=sandbox
# PADDLE_ENVIRONMENT=production

# Paddle Credentials (get these from your Paddle dashboard)
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_API_KEY=your_paddle_api_key
PADDLE_PUBLIC_KEY=your_paddle_public_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# Paddle Plan IDs (configure these in Paddle dashboard first)
PADDLE_STARTER_PRICE_ID=pri_starter_plan_id
PADDLE_PRO_PRICE_ID=pri_professional_plan_id
PADDLE_ENTERPRISE_PRICE_ID=pri_enterprise_plan_id

# Authentication Mode
PADDLE_AUTH_ENABLED=false
# Set to true when ready to use Paddle instead of Cognito
COGNITO_AUTH_ENABLED=true

# Frontend URL for redirects
FRONTEND_URL=http://construction-expenses-multi-table-frontend-702358134603.s3-website-us-east-1.amazonaws.com

# AWS Configuration
AWS_REGION=us-east-1

# DynamoDB Table Names
PADDLE_SUBSCRIPTIONS_TABLE=construction-expenses-paddle-subscriptions
PADDLE_PAYMENTS_TABLE=construction-expenses-paddle-payments
PADDLE_CUSTOMERS_TABLE=construction-expenses-paddle-customers
PADDLE_WEBHOOKS_TABLE=construction-expenses-paddle-webhooks