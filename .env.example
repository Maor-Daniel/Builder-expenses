# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Clerk Configuration
# PRODUCTION: Secrets stored in AWS Secrets Manager (construction-expenses/clerk/*)
# LOCAL DEV: Set these environment variables for local development
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
CLERK_FRONTEND_API=https://your-app.clerk.accounts.dev

# JWT Validation Configuration
# Enhanced security settings for JWT token validation
JWT_MAX_TOKEN_AGE=3600
JWT_EXPIRY_GRACE_PERIOD=30
JWT_EXPECTED_AUDIENCE=

# API Configuration
API_ENDPOINT=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/production
API_STAGE=production

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=construction-expenses-production

# Frontend Configuration
FRONTEND_S3_BUCKET=construction-expenses-production-frontend-xxxxxxxxxxxx
CLOUDFRONT_DISTRIBUTION_ID=XXXXXXXXXXXXX

# Local Development
LOCAL_DEV_PORT=3000
ENABLE_DEBUG_LOGS=true

# Deployment
STACK_NAME=construction-expenses-production
ENVIRONMENT=production

# Sentry Configuration
# PRODUCTION: DSN stored in AWS Secrets Manager (construction-expenses/sentry/dsn)
# LOCAL DEV: Set this environment variable for local development
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT=production

# Paddle Configuration
# PRODUCTION: API keys stored in AWS Secrets Manager (construction-expenses/paddle/*)
# LOCAL DEV: Set these environment variables for local development
PADDLE_API_KEY=pdl_sdbx_apikey_your_sandbox_key
PADDLE_WEBHOOK_SECRET=pdl_ntfset_your_webhook_secret
PADDLE_ENVIRONMENT=sandbox
PADDLE_CLIENT_TOKEN=test_your_client_token