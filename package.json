{
  "name": "construction-expenses-backend",
  "version": "1.0.0",
  "description": "Backend API for Construction Expenses Tracker",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development IS_LOCAL=true node scripts/local-server.js",
    "test:lambda": "NODE_ENV=development IS_LOCAL=true node scripts/test-lambda-local.js",
    "sync:config": "node scripts/sync-config.js",
    "db:setup": "node scripts/setup-local-dynamodb.js setup",
    "db:create": "node scripts/setup-local-dynamodb.js create",
    "db:reset": "node scripts/setup-local-dynamodb.js reset",
    "db:seed": "node scripts/setup-local-dynamodb.js seed",
    "db:status": "node scripts/setup-local-dynamodb.js status",
    "db:list": "node scripts/setup-local-dynamodb.js list",
    "dev:setup": "node scripts/start-local-dev.js",
    "dev:start": "node scripts/start-local-dev.js --start-frontend",
    "deploy": "node scripts/deploy.js",
    "deploy:full": "npm run deploy && npm run sync:config && npm run deploy:frontend",
    "deploy:frontend": "aws s3 sync frontend/ s3://$(aws cloudformation describe-stacks --stack-name construction-expenses-production --query 'Stacks[0].Outputs[?OutputKey==`FrontendBucketName`].OutputValue' --output text)/",
    "deploy:lambda": "node scripts/package-lambdas.js && node scripts/upload-lambdas.js",
    "package": "node scripts/package-lambdas.js",
    "logs": "aws logs tail /aws/lambda/construction-expenses-production-get-expenses --follow",
    "logs:add": "aws logs tail /aws/lambda/construction-expenses-production-add-expense --follow",
    "logs:update": "aws logs tail /aws/lambda/construction-expenses-production-update-expense --follow",
    "logs:delete": "aws logs tail /aws/lambda/construction-expenses-production-delete-expense --follow",
    "update-password": "node scripts/update-password.js",
    "test": "jest",
    "test:secrets": "node test-secrets.js",
    "lint": "eslint .",
    "create-stack": "aws cloudformation create-stack --stack-name construction-expenses-production --template-body file://infrastructure/cloudformation-template.yaml --capabilities CAPABILITY_NAMED_IAM",
    "update-stack": "aws cloudformation update-stack --stack-name construction-expenses-production --template-body file://infrastructure/cloudformation-template.yaml --capabilities CAPABILITY_NAMED_IAM",
    "delete-stack": "aws cloudformation delete-stack --stack-name construction-expenses-production",
    "stack-status": "aws cloudformation describe-stacks --stack-name construction-expenses-production",
    "stack-outputs": "aws cloudformation describe-stacks --stack-name construction-expenses-production --query 'Stacks[0].Outputs' --output table",
    "prepare": "husky"
  },
  "keywords": [
    "aws",
    "lambda",
    "api-gateway",
    "dynamodb",
    "cognito",
    "construction",
    "expenses"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.943.0",
    "@clerk/backend": "^2.20.0",
    "@clerk/clerk-js": "^5.105.1",
    "@sentry/aws-serverless": "^10.23.0",
    "@sentry/browser": "^10.23.0",
    "@sentry/react": "^10.23.0",
    "aws-sdk": "^2.1498.0",
    "dotenv": "^16.6.1",
    "file-type": "^16.5.4"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.940.0",
    "@aws-sdk/lib-dynamodb": "^3.940.0",
    "@playwright/test": "^1.56.1",
    "archiver": "^6.0.1",
    "eslint": "^8.54.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1"
  }
}
