            top: 0;
            right: 0;
            width: 120px;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            background: white;
            padding: 8px;
            transition: transform 0.3s ease;
        }

        .company-logo:hover {
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            .company-logo {
